<%- include("./partials/header") %>



    <video playsinline autoplay muted loop>
        <source src="/images/ps3.mp4" type="video/mp4">
    </video>
    <div class="container mt-2">

        <nav class="navbar navbar-expand-lg sticky-top">

            <a class="navbar-brand " href="/">StudentToDo</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/list">ListAllToDo</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>

                </li>
                <li class="nav-item"></li>
                <div class="container">

                    <h5>Logged in as : <%= user.email %>
                    </h5> <a style="margin-left: 20px;" href="/logout" class="btn btn-danger">Logout</a>
                </div>
                </li>
            </ul>
            <p id="ctime">Current Time:</p>
            <p id="time">
            </p>
        </nav>
        <script>

            function updateTime() {
                var date = new Date();
                var time = date.toLocaleTimeString('en-US', { hour12: true });
                document.getElementById("time").innerHTML = time;
            }

            setInterval(updateTime, 1000);


        </script>
        <div class="container mt-5">

            <ul class="list-group my-5">



                <% todo.forEach(todos=> { %>

                    <li class="list-group-item ">
                        <%= todos.todo %>

                            <i> <strong>
                                    <br>
                                    <%= todos.userEmail %>
                                </strong></i>
                            <i>
                                <br>
                                <%= todos.AddDate %>

                            </i>

                    </li>


                    <% }) %>

            </ul>
        </div>
    </div>
    <style>
        p {
            font-family: 'Times New Roman', Times, serif
        }

        video {
            object-fit: cover;
            width: 100vw;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: -99;
        }

        body {
            /* background-image: url(); */
            background-size: cover;
            background-repeat: no-repeat;

        }

        .navbar-brand,
        .nav-link {
            color: black;
        }

        .navbar-brand:hover,
        .nav-link:hover {
            color: grey;
        }

        .form-control {
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.5);
            border: transparent;


        }

        .form-control::placeholder {
            color: black;
        }

        .form-control:focus {
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 1);


        }


        .list-group-item {

            background-color: rgba(255, 255, 255, 0.5);
            margin-bottom: 10px;
            border-radius: 15px;
        }

        .list-group {
            border-radius: 15px;

        }

        .btn {
            float: right;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 15px;
        }
    </style>


    <%- include("./partials/footer") %>